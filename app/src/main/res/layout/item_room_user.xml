<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="daniel.chatmodel.upcoming.room.domain.model.User" />

        <variable
            name="clickListener"
            type="daniel.chatmodel.upcoming.room.presentation.recycleradapter.UserClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="@{() -> clickListener.onUserClicked()}">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text='@{item.name+ " " + item.surname}'
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="name surname" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/gray"
            android:onClick="@{() -> clickListener.onIconClicked()}"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />
    </LinearLayout>

</layout>